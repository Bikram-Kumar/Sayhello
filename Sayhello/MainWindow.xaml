<Window x:Class="Sayhello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sayhello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="SayHelloButton" Content="Say Hello" HorizontalAlignment="Center" VerticalAlignment="Bottom" RenderTransformOrigin="0.527,0.436" Click="SayHelloButton_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Center" Margin="0,0,0,100" TextWrapping="Wrap" Text="Hello there!" VerticalAlignment="Top" Width="360" Height="80" FontSize="36" TextAlignment="Center" BorderThickness="1,1,8,8"/>

    </Grid>
</Window>
